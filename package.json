{
  "name": "koa-clean-starter",
  "version": "1.0.0",
  "description": "Base REST api web server built using Koa framework, typescript, clean arquitecture and some good practices",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "build": "npx tsc -p tsconfig.prod.json",
    "start": "node -r dotenv/config dist/index.js",
    "prestart": "npm run build",
    "start:prod": "node dist/index.js",
    "start:dev": "nodemon -r dotenv/config --exec ts-node src/index.ts",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "coverage": "jest --coverage",
    "newman": "sleep 5 && newman run postman_collection/koa-clean-starter.postman_collection.json --bail",
    "functional-test": "npm-run-all -p -r start:dev newman"
  },
  "author": "Angel Ulice Tabares Gonzalez <taho2509@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "cls-hooked": "^4.2.2",
    "correlation-id": "^3.1.1",
    "dotenv": "^9.0.2",
    "http-status-codes": "^2.1.4",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "uuid": "^8.3.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@shopify/jest-koa-mocks": "^2.2.4",
    "@types/cls-hooked": "^4.3.1",
    "@types/jest": "^26.0.15",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/koa__cors": "^3.0.2",
    "@types/uuid": "^8.3.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^24.8.0",
    "newman": "^5.2.1",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "stubby": "^5.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
